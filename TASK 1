CSS (styles.css):-
----------------
/* Global styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

header {
  background-color: #333;
  color: #fff;
  padding: 20px;
}

nav ul {
  list-style: none;
  padding: 0;
}

nav ul li {
  display: inline;
  margin-right: 10px;
}

nav ul li a {
  color: #fff;
  text-decoration: none;
}

section {
  padding: 20px;
}

footer {
  background-color: #333;
  color: #fff;
  padding: 10px;
  text-align: center;
}

/* Section-specific styles */
#about {
  background-color: #f9f9f9;
}

#projects .project {
  margin-bottom: 20px;
}

/* Media queries for responsive design */
@media (max-width: 768px) {
  header {
    text-align: center;
  }
  nav ul li {
    display: block;
    margin: 10px 0;
  }
}
